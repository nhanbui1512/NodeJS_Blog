<script>
  var headerNavBtns = document.querySelectorAll('.header-nav-container_item');
  for(let i = 0 ; i < headerNavBtns.length ; i++){
    headerNavBtns[i].onclick = function(){
      var link = headerNavBtns[i].querySelector('a');
      link.click();
    }
  }


  var cartBtn = document.querySelector('.header-cart ')
  var cartDropdown = document.querySelector('.cart-dropdown')
  cartBtn.addEventListener('click', function(){
    if(cartDropdown.className.includes('js-cart-dropdown')){
      cartDropdown.classList.remove('js-cart-dropdown')
    }
    else{
    cartDropdown.classList.add('js-cart-dropdown')

    }
  })

</script>