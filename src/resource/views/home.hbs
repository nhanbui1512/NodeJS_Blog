<script>
      var coppybtns = document.querySelectorAll('.promotion-coppy');
      for (let i = 0; i < coppybtns.length; i++) {
        coppybtns[i].addEventListener('click', function(){
          coppybtns[i].textContent = 'Đã sao chép'
        })
        
      }

      var slider = document.querySelector('.section-flash_slide');

      var nextbtn = document.querySelector('.section-flash_nextbtn');
      var backbtn = document.querySelector('.section-flash_backbtn');
      var items = document.querySelectorAll('.section-flash_item')

      var count = 0
      
      var widthSlider = 220 * (items.length - 5);

      nextbtn.addEventListener('click', function(){
          if(count < widthSlider){
              count += 219;
          }
          slider.style.transform = `translateX(-${count}px)`;
      })

      backbtn.addEventListener('click', function(){

          if(count > 0){
              count -= 219;
          }
          slider.style.transform = `translateX(-${count}px)`;
      })


      setInterval(() => {
        nextbtn.click();
      }, 10000);


